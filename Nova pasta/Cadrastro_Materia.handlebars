{{!-- cadastra as materias/disciplina --}}
<div class="form-group">
    <label for="nome">Nome</label>
    <input name="nome" type="text" id="nome" class="form-control">
</div>

<div class="form-group">
    <button id="add" class="form-control btn btn-outline-primary">Cadastrar</button>
</div>

<div class="bg-dark">
    <pre id="cod" class="text-white"></pre>
</div>

<script>
    $('#add').click(() => {
        $.ajax({
            type: "POST",
            url: '/cadastro_materia',
            dataType: 'html',
            data: {
                nome: $('#nome').val()
            },
            success: data => {
                $('#cod').text(data)
            }
        })
    })
</script>